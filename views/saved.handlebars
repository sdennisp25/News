<style>
	h4 {
		text-align: center;
	}
	.form-box {
		height: 400px;
		width: 450px;
		padding: 15px;
		background-color: grey;
		border: 2px solid black;
	}
	.articleBox {
		height: 400px;
		width: 450px;
		padding: 15px;
		background-color: grey;
		border: 2px solid black;
	}
	.commentBox {
		height: 400px;
		width: 450px;
		padding: 15px;
		background-color: grey;
		border: 2px solid black;
	}

